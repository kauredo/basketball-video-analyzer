{
  "name": "basketball-clip-cutter",
  "version": "1.0.0",
  "description": "Desktop app for cutting and categorizing basketball video clips for team scouting",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "webpack --mode=production",
    "dev": "concurrently \"npm run build:main\" \"npm run dev:renderer\" \"wait-on dist/main/main.js && electron-forge start\"",
    "dev:renderer": "webpack --mode=development --watch",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:all": "electron-forge make --platform=win32,darwin,linux",
    "publish": "electron-forge publish",
    "dist": "npm run build && npm run make:all",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "prepare-deps": "electron-forge import && npm exec --package=@electron/rebuild -- electron-rebuild -f",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "npm version patch && npm run dist"
  },
  "keywords": [
    "basketball",
    "video",
    "clips",
    "scouting",
    "electron"
  ],
  "build": {
    "npmRebuild": true,
    "nodeGypRebuild": false
  },
  "author": {
    "name": "Basketball Video Analyzer Team",
    "email": "contact@basketballvideoanalyzer.com"
  },
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/kauredo/basketball-video-analyzer",
  "repository": {
    "type": "git",
    "url": "https://github.com/kauredo/basketball-video-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/kauredo/basketball-video-analyzer/issues"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Basketball Video Analyzer",
        "executableName": "basketball-video-analyzer",
        "appBundleId": "com.basketballvideoanalyzer.app",
        "appCategoryType": "public.app-category.sports",
        "icon": "./assets/icon",
        "ignore": [
          "^/src/",
          "^/assets/",
          "^/.git",
          "^/node_modules/(?!.*/(node_modules|dist))",
          "^/README.md",
          "^/tsconfig.json",
          "^/webpack.config.js"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "basketball_video_analyzer",
            "description": "Desktop app for cutting and categorizing basketball video clips",
            "setupIcon": "./assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "Basketball Video Analyzer",
            "icon": "./assets/icon.icns"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "maintainer": "Basketball Video Analyzer Team",
            "homepage": "https://github.com/kauredo/basketball-video-analyzer"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "maintainer": "Basketball Video Analyzer Team",
            "homepage": "https://github.com/kauredo/basketball-video-analyzer"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "kauredo",
              "name": "basketball-video-analyzer"
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/publisher-github": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^28.0.0",
    "electron-rebuild": "^3.2.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@types/react-resizable": "^3.0.8",
    "better-sqlite3": "^9.2.2",
    "electron-squirrel-startup": "^1.0.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "re-resizable": "^6.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.5.3",
    "react-resizable": "^3.0.5",
    "uuid": "^9.0.0"
  }
}
