{
  "name": "basketball-video-analyzer",
  "version": "1.0.0",
  "description": "Desktop app for analyzing basketball game videos with tagging and timeline features",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "webpack --mode=production",
    "dev": "concurrently \"npm run build:main\" \"npm run dev:renderer\" \"wait-on dist/main/main.js && electron-forge start\"",
    "dev:renderer": "webpack --mode=development --watch",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "keywords": [
    "basketball",
    "video",
    "analysis",
    "electron",
    "sports"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-fuses": "^7.2.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "html-webpack-plugin": "^5.5.0"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "better-sqlite3": "^9.2.2",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
